pipeline{
    agent any
    
    options {
		buildDiscarder(logRotator(numToKeepStr: '10'))
	}

	parameters {
		booleanParam name: 'BUILD', defaultValue: true, description: 'Build what?'
		booleanParam name: 'RUN_ANALYSIS', defaultValue: true, description: 'Run Static Code Analysis?'
		booleanParam name: 'DEPLOY', defaultValue: true, description: 'Deploy Artifacts?'
	}
    stages {
        stage('Build') {
            when {
                environment name: 'BUILD', value: 'true'
            }
            steps{
                echo 'This is a build step, wonderful again!!!' 
                cmake arguments: '-G "Visual Studio 14 2015 Win64" ..', workingDir: 'build',  installation: 'InSearchPath'
                cmake arguments: '--build . --target doc', workingDir: 'build', installation: 'InSearchPath'
                cmakeBuild buildType: 'Release', cleanBuild: true, installation: 'InSearchPath', steps: [[withCmake: true]]
            }
        }
        stage('Test') {
            steps{
                echo 'This is a test step, close sunny-ngrok again again again!'  
            }
        }
        stage('Deploy') {
             when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps{
                echo 'This is a deploy step. Done'    
                publishHTML target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: 'html',
                    reportFiles: 'index.html',
                    reportName: 'RCov Report'
                ]
            }
        }
    }
}