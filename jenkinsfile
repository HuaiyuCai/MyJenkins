pipeline{
    agent {
        label {
            label ""
            customWorkspace "D:/jenkins_workspaces"
        }
    }

    options {
		buildDiscarder(logRotator(numToKeepStr: '10'))
	}

	parameters {
		booleanParam name: 'BUILD', defaultValue: true, description: 'Build what?'
		booleanParam name: 'RUN_ANALYSIS', defaultValue: true, description: 'Run Static Code Analysis?'
		booleanParam name: 'DEPLOY', defaultValue: true, description: 'Deploy Artifacts?'
	}
    stages {
        stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
        stage('Build') {
            when {
                environment name: 'BUILD', value: 'true'
            }
            steps{
                echo 'This is a build step, wonderful again!!!' 
                cmakeBuild buildDir: 'build', buildType: 'Debug', cleanBuild: true, generator: 'Visual Studio 14 2015 Win64', installation: 'InSearchPath', steps: [[args: '--target doc', withCmake: true]]
            }
        }
        stage('Test') {
            steps{
                echo 'This is a test step, close sunny-ngrok again again again!'  
            }
        }
        stage('Deploy') {
             when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps{
                echo 'This is a deploy step. Done'    
                publishHTML target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: 'build/html',
                    reportFiles: 'index.html',
                    reportName: 'RCov Report'
                ]
            }
        }
    }
}